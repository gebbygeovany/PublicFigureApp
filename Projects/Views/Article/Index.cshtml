@model IEnumerable<Projects.Models.Article>

<div class="container p-3">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Link</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model)
                {
                    <tr>
                        <td width="50%">@article.Title</td>
                        <td width="50%">
                            <a href="https://www.youtube.com/watch?v=xsReeg7WqRc">
                                @article.Link
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="col-12 text-right">
            <a asp-controller="Article" asp-action="Create" asp-route-Id="2" class="btn btn-outline-info">
                <i class="bi bi-plus-lg"></i>
                Add New Article
            </a>
        </div>
    }
    else
    {
        <div class="text-center">
            <p>No Articles Yet</p>
            <a asp-controller="Article" asp-action="Create" asp-route-Id="2" class="btn btn-outline-info">
                <i class="bi bi-plus-lg"></i>
                Add New Article
            </a>
        </div>
    }

</div>