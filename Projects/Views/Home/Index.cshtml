@model IEnumerable<Projects.Models.People>

<div class="container p-3">
    <div class="row pt-4">
        <h2 class="col-6 text-black-50 pl-3">Search Public Figure</h2>
        <div class="col-6 text-right">
            <form method="post" asp-action="IndexPost">
                <div class="form-row">
                    <div class="col">
                        <select id="inputState" class="form-control" name="category">
                            <option selected>Category</option>
                            <option>Actor</option>
                            <option>Muscisian</option>
                        </select>
                    </div>
                    <div class="col">
                        <select id="inputState" class="form-control" name="region">
                            <option selected>Region</option>
                            <option>Indonesian</option>
                            <option>International</option>
                        </select>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-outline-info mb-2">Search</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
    <br />
    <table class="table table-striped table-hover" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Region</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var people in Model)
            {
                <tr>
                    <td width="30%" id="name">@people.Name</td>
                    <td width="30%">@people.Category</td>
                    <td width="30%">@people.Region</td>
                    <td width="10%">
                        <a asp-controller="Article" asp-action="Index" asp-route-Id="@people.Id" class="btn btn-info">
                            <i class="bi bi-eye"></i>
                            View
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <div class="col-12 text-right">
        <a asp-controller="Home" asp-action="Create" class="btn btn-outline-info">
            <i class="bi bi-plus-lg"></i>
            Add New People
        </a>
    </div>


</div>