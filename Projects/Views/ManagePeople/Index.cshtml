@model IEnumerable<Projects.Models.People>

<div class="container p-3">
    @if (Model.Count() > 0)
    {
        <div class="row pt-4">
            <h2 class="col-6 text-black-50 pl-3">Search Public Figure</h2>
            <div class="col-6 text-right">
                <form method="post" asp-action="IndexPost">
                    <div class="form-row">
                        <div class="col">
                            <select id="inputState" class="form-control" name="category">
                                <option selected>Category</option>
                                <option>Actor</option>
                                <option>Musician</option>
                            </select>
                        </div>
                        <div class="col">
                            <select id="inputState" class="form-control" name="region">
                                <option selected>Region</option>
                                <option>Indonesian</option>
                                <option>International</option>
                            </select>
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-outline-info mb-2">Search</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>
        <br />
        <table class="table table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Region</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var people in Model)
                {
                    <tr>
                        <td width="25%" id="name">@people.Name</td>
                        <td width="25%">@people.Category</td>
                        <td width="25%">@people.Region</td>
                        <td width="25%">

                            <div class="btn-group text-right" role="group" aria-label="Basic example">
                                <a asp-controller="ManagePeople" asp-action="Delete" asp-route-Id="@people.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                    Delete
                                </a>
                                <a asp-controller="ManagePeople" asp-action="Update" asp-route-Id="@people.Id" class="btn btn-outline-dark">
                                    <i class="bi bi-pencil-square"></i>
                                    Edit
                                </a>
                                <a asp-controller="ManageArticle" asp-action="Index" asp-route-Id="@people.Id" class="btn btn-outline-info">
                                    <i class="bi bi-eye"></i>
                                    View
                                </a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <div class="col-12 text-right">
            <a asp-controller="ManagePeople" asp-action="Create" class="btn btn-info">
                <i class="bi bi-plus-lg"></i>
                Add New People
            </a>
        </div>
    }
    else
    {
        <div class="text-center">
            <p>No Peoples Yet</p>
            <a asp-controller="ManagePeople" asp-action="Create" class="btn btn-outline-info">
                <i class="bi bi-plus-lg"></i>
                Add New People
            </a>
        </div>
    }
</div>
